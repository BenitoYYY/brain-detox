<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brain Rot Reducer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/appIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Block distracting apps, set your own limits, and reclaim your focus."
        android:textSize="16sp"
        android:textColor="@color/colorOnBackground"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.5"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/accessButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Grant Usage Access"
        android:icon="@android:drawable/ic_menu_info_details"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorOnPrimary"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectAppsButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select Apps to Block"
        android:icon="@android:drawable/ic_menu_manage"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/accessButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/colorSecondary"
        android:textColor="@color/colorOnSecondary"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/setTimeLimitsButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Set/Update Time Limits"
        android:icon="@android:drawable/ic_menu_recent_history"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/selectAppsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/colorPrimaryVariant"
        android:textColor="@color/colorOnPrimary"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/testButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Test Home Redirect"
        android:icon="@android:drawable/ic_menu_help"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/setTimeLimitsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:cornerRadius="16dp"
        app:strokeColor="@color/colorSecondary"
        android:textColor="@color/colorSecondary"/>

</androidx.constraintlayout.widget.ConstraintLayout> 