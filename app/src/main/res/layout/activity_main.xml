<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">

            <!-- App Icon with Gradient Background -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/app_icon_background"
                android:elevation="8dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_gravity="center"
                    android:contentDescription="App Icon" />

            </FrameLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brain Rot Reducer"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Take control of your digital habits. Set limits, block distractions, and focus on what matters most."
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="4dp"
                android:maxLines="3" />

        </LinearLayout>

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:strokeColor="@color/cardBorder"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/headerSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊 Current Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready to set up your digital wellness plan"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/actionsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:strokeColor="@color/cardBorder"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/statusCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚙️ Setup &amp; Configuration"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/accessButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🔐 Grant Usage Access"
                    android:textSize="16sp"
                    app:icon="@android:drawable/ic_menu_info_details"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/colorOnPrimary"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectAppsButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="📱 Select Apps to Block"
                    android:textSize="16sp"
                    app:icon="@android:drawable/ic_menu_manage"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/colorSecondary"
                    android:textColor="@color/colorOnSecondary"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/setTimeLimitsButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="⏰ Set Time Limits"
                    android:textSize="16sp"
                    app:icon="@android:drawable/ic_menu_recent_history"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/colorPrimaryVariant"
                    android:textColor="@color/colorOnPrimary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Test Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/testCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground"
            app:strokeColor="@color/cardBorder"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/actionsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🧪 Testing"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/testButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🚀 Test Blocking System"
                    android:textSize="16sp"
                    app:icon="@android:drawable/ic_menu_help"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/colorInfo"
                    android:textColor="@color/colorInfo" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView> 